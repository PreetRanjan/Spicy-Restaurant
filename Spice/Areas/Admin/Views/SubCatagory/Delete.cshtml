@model SubCatagory
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<h2 class="text-info">Delete Catagory</h2>
<br />
<form method="post" asp-action="Delete" autocomplete="off">
    <div class="border background-white">

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <h5>@Model.Name</h5>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Catagory.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <p>@Model.Catagory.Name</p>
            </div>
            
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBacktoList" model="Model.Id" />
            </div>
        </div>
    </div>
</form>
