@model Coupon
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border p-3">
    <h2 class="text-dark">Delete Coupon</h2>
    <h6 class="text-muted">The coupon will be deleted and is not possible to recover</h6>
</div>

<br />
<form method="post" asp-action="Delete" autocomplete="off">
    <div class="border background-white">

        <div class="list-group">
            <div class="list-group-item"><h5>Name - @Model.Name</h5></div>
            <div class="list-group-item"><h5>Type - @Model.CouponType</h5></div>
            <div class="list-group-item"><h5>Min. Amount - @Model.MinimumAmount</h5></div>
            <div class="list-group-item"><h5>Discount - @Model.Discount</h5></div>
        </div>
        <div class="form-group row">
            <div class="col-7 offset-2">
                <partial name="_DeleteAndBacktoList" model="Model.Id" />
            </div>
        </div>
    </div>
</form>
