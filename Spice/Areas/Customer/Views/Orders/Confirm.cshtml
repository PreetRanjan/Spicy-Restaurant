@model OrderDetailsViewModel
@{
    ViewData["Title"] = "Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-light">
    <div class="card">

        <div class="row border border-white">
            <div class="card text-white bg-success w-100 card-nue">
                <div class="card-body bg-success card-nue-green">
                    <h3 class="text-center">
                        <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-check-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                        </svg>
                    </h3>

                    <h4 class="card-title text-center">

                        Order Confirmed!
                    </h4>

                    <p class="text-center">Feel free to contact us for any additional query.</p>

                </div>
                <div class="container">
                    <partial name="_IndividualOrderpartial" model="Model" />
                </div>
                


            </div>
        </div>


    </div>
    <a class="btn btn-secondary text-center" asp-area="Customer" asp-controller="Home" asp-action="Index">Place a New Order</a>
</div>

